<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="@color/yellow"
        android:padding="12dp"
        android:text="This is a sample message that will appear"
        android:textColor="@color/white"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_bot__message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="@color/colorBackgroundOrange"
        android:padding="12dp"
        android:text="This is a sample message that will appear"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/rv_message_toClick"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bot__message"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/click_round_box"
        android:padding="5dp"
        android:textAlignment="center"
        android:text="This is a sample message that will appear"
        android:textColor="@color/yellow"
        android:textSize="12sp"
        android:visibility="visible"/>


</RelativeLayout>