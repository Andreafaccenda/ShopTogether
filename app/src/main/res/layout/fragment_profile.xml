<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txt_email_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="andreafaccenda2000@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_username" />

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Andrea Faccenda"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="32dp"
                        app:cardCornerRadius="100dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/image_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/profile" />

                    </androidx.cardview.widget.CardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:background="@drawable/background_profile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/card_background"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_email_user">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!--Pagamento -->

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="0.333333"
                                android:background="@drawable/grey_background"
                                android:elevation="5dp"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/layout_payment"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/circle_background">

                                    <ImageView
                                        android:id="@+id/image_pagamento"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="fitXY"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/wallet" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="@string/pagamento"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <!--Galleria -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="0.333333"
                                android:background="@drawable/grey_background"
                                android:elevation="5dp"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/layout_upload_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/circle_background">

                                    <ImageView
                                        android:id="@+id/image_galleria"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="fitXY"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/upload_image" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:text="@string/upload_image"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <!--Ordini -->
                            <LinearLayout
                                android:id="@+id/layout_ordini"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="0.333333"
                                android:background="@drawable/grey_background"
                                android:elevation="5dp"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/circle_background">

                                    <ImageView
                                        android:id="@+id/image_ordini"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="fitXY"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/ordini" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="@string/i_tuoi_ordini"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginStart="230dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp">
                            <Button
                                android:id="@+id/btn_esci"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_yellow"
                                android:drawableStart="@drawable/logout"
                                android:padding="10dp"
                                android:elevation="10dp"
                                android:text="@string/esci"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:textStyle="normal"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/nome"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic"
                                />

                            <EditText
                                android:id="@+id/et_nome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@null"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="andrea"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="12sp"
                                android:textStyle="italic"/>

                        </LinearLayout>

                        <View
                            android:id="@+id/underline"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="#D9D9D9" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cognome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/cognome"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_cognome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@null"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="faccenda"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <View
                            android:id="@+id/underline2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="#D9D9D9" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Telefono"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/telefono"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_telefono"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@null"
                                android:ems="10"
                                android:inputType="number"
                                android:text=""
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <View
                            android:id="@+id/underline3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="#D9D9D9" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Genere"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Genere"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14dp"
                                android:textStyle="italic" />

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <RadioButton
                                    android:id="@+id/round_M"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end"
                                    android:layout_margin="5dp"
                                    android:text="Maschio "
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="12sp"
                                    android:textStyle="italic"
                                    android:theme="@style/radioButton" />

                                <RadioButton
                                    android:id="@+id/round_F"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end"
                                    android:layout_margin="5dp"
                                    android:text="Femmina"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="12sp"
                                    android:textStyle="italic"
                                    android:theme="@style/radioButton" />

                            </RadioGroup>
                        </LinearLayout>

                        <View
                            android:id="@+id/underline4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="#D9D9D9" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/email"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@null"
                                android:ems="10"
                                android:inputType="textEmailAddress"
                                android:text="andreafaccenda2000@gmail.com"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textIsSelectable="false"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <View
                            android:id="@+id/underline5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="#D9D9D9" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/password"
                                android:drawableEnd="@drawable/vedi_password"
                                android:paddingEnd="10dp"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="@null"
                                android:ems="10"
                                android:inputType="textPassword"
                                android:text="12345678"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textIsSelectable="false"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <View
                            android:id="@+id/underline6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="#D9D9D9" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/residenza"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/residenza"
                                android:textAlignment="center"
                                android:textColor="@color/yellow"
                                android:textSize="18sp"
                                android:textStyle="italic" />
                            <Button
                                android:id="@+id/btn_autoLocation"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/location"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="70dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/citta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="@string/citt"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_citta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_custom"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text=""
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textIsSelectable="false"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="70dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:layout_marginStart="2dp"
                                android:text="@string/cap"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_cap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="2dp"
                                android:background="@drawable/edit_text_custom"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text=""
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textIsSelectable="false"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                            <TextView
                                android:id="@+id/provincia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="0"
                                android:text="@string/provincia"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_provincia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="2dp"
                                android:background="@drawable/edit_text_custom"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text=""
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textIsSelectable="false"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="70dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/via"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="@string/via"
                                android:textAlignment="textStart"
                                android:textColor="@color/yellow"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/et_via"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="2dp"
                                android:background="@drawable/edit_text_custom"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text=""
                                android:textAlignment="viewEnd"
                                android:textColor="@color/colorSecondaryText"
                                android:textIsSelectable="false"
                                android:textSize="12sp"
