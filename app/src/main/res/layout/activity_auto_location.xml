<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.impostazioni.profile.AutoLocationActivity"
    android:background="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/card_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/circle_background">

                <ImageView
                    android:id="@+id/image_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/edit" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:drawableEnd="@drawable/location"
            android:padding="10dp"
            android:text="@string/fetch_Location"
            android:textAlignment="viewStart"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:text="@string/citt"
                    android:textAlignment="textStart"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/et_citta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_custom"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorSecondaryText"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cap"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:text="@string/cap"
                    android:textAlignment="textStart"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/et_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_custom"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorSecondaryText"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/provincia"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="0"
                    android:padding="5dp"
                    android:text="@string/provincia"
                    android:textAlignment="textStart"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/et_provincia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_custom"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorSecondaryText"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/via"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:text="@string/via"
                    android:textAlignment="textStart"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/et_via"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_custom"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorSecondaryText"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numero_civico"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:text="@string/numero_civico"
                    android:textAlignment="textStart"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/et_numero_civico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_custom"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorSecondaryText"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/salva_residenza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:text="@string/salva_come_indirizzo_di_residenza"
            android:textAlignment="viewStart"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:textStyle="normal"
            android:theme="@style/radioButton" />

        <Button
            android:id="@+id/btFetchLocation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_yellow"
            android:clickable="true"
            android:drawableEnd="@drawable/locationbtn"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/fetch_Location"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
