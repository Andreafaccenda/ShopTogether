<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:background="@drawable/round_recyclerview"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_prodotto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="0"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/cat_1" />


    <ImageView
        android:id="@+id/image_meno"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/minus"/>

    <TextView
        android:id="@+id/txt_quantità_prodotto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:layout_marginTop="75dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#373b54"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_piu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/plus" />
    <TextView
        android:id="@+id/nome_prodotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="25dp"
        android:text="Pizza"
        android:textSize="16sp"
        android:textColor="#373b54"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/totale_prodotto"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="65dp"
        android:text="€40"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:textStyle="bold"
        />


</LinearLayout>