<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.impostazioni.Impostazioni">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_back"
            android:padding="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Impostazioni"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/icona_profilo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andrea Faccenda"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="andreafaccenda2000@gmail.com"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="italic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:layout_gravity="center"
                android:paddingEnd="30dp"
                android:text="Modifica profilo"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal"
                android:background="@drawable/button_white"
                />
            <LinearLayout
                android:background="@drawable/round_back_white10_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:padding="15dp">
                <!--Assistenza clienti -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/assistenza_clienti"
                        android:layout_height="40dp"
                        android:background="@drawable/round_back_assistenza_clienti"
                        android:src="@drawable/assistenza_clienti_icon"
                        android:padding="12dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_avanti_assistenza"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Assistenza clienti"
                        android:textColor="@color/assistenza_clienti"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/assistenza_clienti"/>
                </RelativeLayout>
                <!--Account -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/account"
                        android:layout_height="40dp"
                        android:background="@drawable/round_account"
                        android:src="@drawable/account_icon"
                        android:padding="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Account"
                        android:textColor="@color/account"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/account"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_avanti_account"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <!--Notifiche -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/notifiche"
                        android:layout_height="40dp"
                        android:background="@drawable/round_notifiche"
                        android:src="@drawable/notiche_icon"
                        android:padding="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Notifiche"
                        android:textColor="@color/notifiche"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/notifiche"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:switchMinWidth="50dp"
                        android:theme="@style/notificationSwitch"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
            android:background="@drawable/round_back_white10_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="15dp">
                <!--Sicurezza -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/sicurezza"
                        android:layout_height="40dp"
                        android:background="@drawable/round_sicurezza"
                        android:src="@drawable/sicurezza_icon"
                        android:padding="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Sicurezza"
                        android:textColor="@color/sicurezza"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/sicurezza"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_avanti"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>
                <!--Frigorifero -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/frigorifero"
                        android:layout_height="40dp"
                        android:background="@drawable/round_frigorifero"
                        android:src="@drawable/kitchen"
                        android:padding="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Frigorifero"
                        android:textColor="@color/colorBackgroundOrange"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/frigorifero"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_avanti"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>