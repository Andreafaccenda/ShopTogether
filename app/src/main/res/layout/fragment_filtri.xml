<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.catalogo.Filtri">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/turn_back"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/filtri"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold"
                />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_price"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_yellow"
                        android:drawableStart="@drawable/chiudi"
                        android:paddingStart="5dp"
                        android:clickable="true"
                        android:textAlignment="viewStart"
                        android:focusableInTouchMode="true"
                        android:text="@string/prezzo"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:elevation="5dp"
                    android:background="@drawable/payment_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:paddingStart="5dp"
                            android:text="@string/_1_oltre"
                            android:textSize="12dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorSecondaryText"/>
                        <TextView
                            android:id="@+id/txt_price_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorSecondaryText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/seekbar_price"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="50dp"
                            android:max="50"
                            android:min="1"
                            android:progress="1"
                            android:theme="@style/radioButton"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableStart="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingStart="5dp"
                        android:text="@string/categoria"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_frutta_verdura"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="3dp"
                        android:paddingStart="10dp"
                        android:text="@string/frutta_e_verdura"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/layout_subCatFrutta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btn_fruttaFresca"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="60dp"
                            android:background="@drawable/button_yellow"
                            android:clickable="true"
                            android:drawableEnd="@drawable/chiudi"
                            android:focusableInTouchMode="true"
                            android:paddingEnd="5dp"
                            android:paddingStart="10dp"
                            android:text="@string/frutta_fresca"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:textStyle="normal" />
                        <LinearLayout
                            android:id="@+id/layout_subFruttaFresca"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="120dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_mele"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_white"
                                    android:clickable="true"
                                    android:focusableInTouchMode="true"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="5dp"
                                    android:text="@string/mele"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/yellow"
                                    android:textSize="8sp"
                                    android:textStyle="normal" />

                                <RadioButton
                                    android:id="@+id/radio_mele"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:theme="@style/radioButton"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="120dp"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/btn_arance"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_white"
                                    android:clickable="true"
                                    android:focusableInTouchMode="true"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="10dp"
                                    android:text="@string/arance"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/yellow"
                                    android:textSize="8sp"
                                    android:textStyle="normal" />
                                <RadioButton
                                    android:id="@+id/radio_arance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:theme="@style/radioButton"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="120dp"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/btn_banane"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_white"
                                    android:clickable="true"
                                    android:focusableInTouchMode="true"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="10dp"
                                    android:text="@string/banane"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/yellow"
                                    android:textSize="8sp"
                                    android:textStyle="normal" />
                                <RadioButton
                                    android:id="@+id/radio_banane"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:theme="@style/radioButton"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="120dp"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/btn_altraFrutta"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:clickable="true"
                                    android:focusableInTouchMode="true"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="10dp"
                                    android:text="@string/altra_frutta"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/yellow"
                                    android:textSize="8sp"
                                    android:textStyle="normal" />
                                <RadioButton
                                    android:id="@+id/radio_altraFrutta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:theme="@style/radioButton"
                                    />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_carne"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/carne"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_affettati_salumi"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/affettati_e_salumi"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_surgelati_gelati"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="Surgelati e gelati"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="normal" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_marchio"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableStart="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingStart="5dp"
                        android:text="@string/marchio"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_marchio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:elevation="5dp"
                android:background="@drawable/payment_bg"
                android:orientation="vertical">
                <androidx.appcompat.widget.SearchView
                        android:theme="@style/AppSearchView"
                        android:id="@+id/search_marchio"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        app:queryHint="@string/search_marchio"
                        android:background="#F1F1F1"
                        app:iconifiedByDefault="false"

                    />
                <LinearLayout
                    android:id="@+id/layout_marchio_checked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/filtroMarchio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:paddingStart="5dp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textSize="12dp"
                        android:textColor="@color/yellow"
                        android:background="#F1F1F1"/>

                    <RadioButton
                        android:id="@+id/rb_marchio"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="70dp"
                        android:layout_weight="0"
                        android:theme="@style/radioButton"
                        />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_marchio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_mostra"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:focusableInTouchMode="true"
                        android:text="@string/mostra_i_risultati"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>