                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="3dp"
                        android:paddingStart="10dp"
                        android:text="@string/frutta_e_verdura"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn_carne_salumi"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/carne"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_pesce_sushi"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:elevation="5dp"
                        android:background="@drawable/button_white"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/pesce_e_sushi"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_formaggi_latte_uova"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/formaggi_latte_uova"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_preparazione_dolci"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/preparazione_dolci_e_salati"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_biscotti_cereali_dolci"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/biscotti_cereali_e_dolci"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_caffe_infusi"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/caffe_e_infusi"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_condimenti_conserve"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/condimenti_e_conserve"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_panetteria_snacksalati"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/panetteria_e_snack_salati"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_pasta_riso"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/pasta_e_riso"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_surgelati_gelati"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/surgelati_e_gelati"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_piattiPronti"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/piatti_pronti"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_articoli_casa"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/articoli_per_la_casa"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_animali_domestici"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/animali_domestici"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_vino_birra_alcolici"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="@string/vino_birra_e_altri_alcolici"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                    <Button
                        android:id="@+id/btn_bevande"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_white"
                        android:elevation="5dp"
                        android:clickable="true"
                        android:drawableEnd="@drawable/chiudi_giallo"
                        android:focusableInTouchMode="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:text="Bevande"
                        android:textAlignment="viewStart"
                        android:textColor="@color/yellow"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_subCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/payment_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_margin="5dp"
                            android:text="@string/categoria"
                            android:paddingStart="10dp"
                            android:textColor="@color/yellow"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:textAlignment="viewStart"/>

                        <TextView
                            android:id="@+id/txt_categoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_margin="5dp"
                            android:background="@drawable/edit_text_custom"
                            android:drawableEnd="@drawable/close"
                            android:padding="5dp"
                            android:text=""
                            android:textSize="10sp"
                            android:textColor="@color/yellow"
                            android:textAlignment="viewStart"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_category_checked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/sub_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/edit_text_custom"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="@color/yellow"
                        android:textAlignment="viewStart"
                        android:textStyle="italic"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_marchio"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableStart="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingStart="5dp"
                        android:text="@string/marchio"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_marchio_checked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/filtroMarchio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:paddingStart="5dp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textSize="12dp"
                        android:textColor="@color/yellow"
                        android:background="#F1F1F1"/>

                    <RadioButton
                        android:id="@+id/rb_marchio"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="70dp"
                        android:layout_weight="0"
                        android:theme="@style/radioButton"
                        />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_marchio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:elevation="5dp"
                android:background="@drawable/payment_bg"
                android:orientation="vertical">
                <androidx.appcompat.widget.SearchView
                        android:theme="@style/AppSearchView"
                        android:id="@+id/search_marchio"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        app:queryHint="@string/search_marchio"
                        android:background="#F1F1F1"
                        app:iconifiedByDefault="false" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_marchio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_scanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_custom">

                    <TextView
                        android:id="@+id/title_scan"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_white"
                        android:padding="5dp"
                        android:text="@string/scannerizza_per_cercare_il_prodotto"
                        android:textColor="@color/yellow"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"/>
                    <Button
                        android:id="@+id/btn_scan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:drawableStart="@drawable/scan"
                        android:padding="12dp"
                        android:background="@drawable/button_white"
                        android:clickable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>
                <LinearLayout
