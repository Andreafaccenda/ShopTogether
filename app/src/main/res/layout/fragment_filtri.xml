<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.catalogo.filtri.Filtri">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/turn_back"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:padding="10dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/filtri"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold"
                />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_price"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_yellow"
                        android:drawableStart="@drawable/chiudi"
                        android:paddingStart="5dp"
                        android:clickable="true"
                        android:textAlignment="viewStart"
                        android:focusableInTouchMode="true"
                        android:text="@string/prezzo"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:elevation="5dp"
                    android:background="@drawable/payment_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:paddingStart="5dp"
                            android:text="@string/_1_oltre"
                            android:textSize="12dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorSecondaryText"/>
                        <TextView
                            android:id="@+id/txt_price_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorSecondaryText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/seekbar_price"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="50dp"
                            android:max="50"
                            android:min="1"
                            android:progress="1"
                            android:theme="@style/radioButton"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_yellow"
                        android:clickable="true"
                        android:drawableStart="@drawable/chiudi"
                        android:focusableInTouchMode="true"
                        android:paddingStart="5dp"
                        android:text="@string/categoria"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/payment_bg"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <Button
